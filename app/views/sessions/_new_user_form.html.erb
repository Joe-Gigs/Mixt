<div class="user_form">
	<%= form_tag do  %>
		
		<div class="form">
			<%= text_field_tag(:username, nil, placeholder: "Username", class: "form_fields")  %>
			<br><br>
			<%= password_field_tag(:password, nil, placeholder: "Password", class: "form_fields") %>
		</div>

		<div class="submits">
			<%= submit_tag("SIGN IN", :class => "submit_button") %>
		</div>
	<% end %>
</div>
