<div class="all_wrapper">
<%=  link_to(image_tag("logo_pink.png", size:"120x49"), user_path(current_user), class: :logo) %>
	<!--  NAVBAR -->
	<nav class="all_nav">
		<ul>
			<li><a href=""><i class="fa fa-facebook-official"></i></a></li>
			<li><a href=""><i class="fa fa-soundcloud"></i></a></li>
			<li><a href=""><i class="fa fa-twitter"></i></a></li>
			<li><a href=""><i class="fa fa-tumblr"></i></a></li>
		</ul>
	</nav>
	
	<%= form_for ([@user, @tape]) do |tape| %> 
		<div class="newtape">
				<h2><%= tape.text_field :tapename, class: :tape_form, :placeholder => "Tape Name" %></h2><br><br>
				<h2><%= tape.text_area :description, id: :description, :placeholder => "Leave a message here" %></h2><br><br>
		</div>

		<div id="songs">
			<%= tape.file_field :song %><br><br>
			<%= tape.submit 'Create Tape', class: :create_button %>
			<%= link_to "back to home",user_path(current_user) %>

		</div>
	<% end %>
</div>

<div class="all_footer">
	<hr><br>
	<span class="copyright">&copy; Mixt</span>
</div>

